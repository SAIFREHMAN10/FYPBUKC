                                    <input class="form-control" id="addStudent-enrollment" name="enrollment" required value="{{adminstudentmanagement.enrollment}}">

                                </div>
                                <div class="col-md-6">
                                    <label for="addStudent-Password" class="form-label">Password</label>
                                    <input type="password" class="form-control" id="addStudent-Password" name="spassword" value="{{adminstudentmanagement.spassword}}">
                                </div>

