    <div class="container">
        <div class="accordion" id="accordionExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Lectures
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne"
                    data-bs-parent="#accordionExample">
                    <div class="accordion-body">

                        <div class="row table-responsive">

                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">Lecture#</th>
                                        <th scope="col">Lecture Tittle</th>
                                        <th scope="col">Lecture File</th>
                                        <!-- <th scope="col">Download FIle</th> -->
                                        <th scope="col">
                                            <div class="">
                                                <a href="" class="btn btn-dark " data-bs-toggle="modal"
                                                    data-bs-target="#uploadLecture"> +
                                                    Add
                                                    Lecture</a>

                                                <!-- Modal -->
                                                <div class="modal fade" id="uploadLecture" tabindex="-1"
                                                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="exampleModalLabel">Add a
                                                                    Lecture</h5>
                                                                <button type="button" class="btn-close"
                                                                    data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <form action="/TeacherCourseSelection.ejs" method="POST"
                                                                    enctype="multipart/form-data">

                                                                    <div class="col-md-6">
                                                                        <label for="newCoureName"
                                                                            class="form-label">Lecture Tittle</label>
                                                                        <input type="text" class="form-control"
                                                                            id="newCoureName" name="Aname">
                                                                    </div>
                                                                   
                                                                    <div class="col-md-6 ">
                                                                    <label for="add-LectureWeek"  class="form-label ">Lecture No</label>
                                                                    <select id="add-LectureWeek" class="form-select " name="lecno" >
                                                                    <option selected>1</option>
                                                                    <option>2</option>
                                                                    <option>3</option>
                                                                    <option>4</option>
                                                                    <option>5</option>
                                                                    <option>6</option>
                                                                    <option>7</option>
                                                                    <option>8</option>
                                                                  </select>
                                                                </div>


                                                                    <div class="input-group col-md-12">
                                                                        <div class="custom-file">
                                                                            <label class="custom-file-label"
                                                                                for="inputGroupFile04"></label>
                                                                            <br>
                                                                            <input type="file" class="custom-file-input"
                                                                                name="image" id="inputGroupFile04">

                                                                        </div>

                                                                    </div>



                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-light"
                                                                    data-bs-dismiss="modal">Close</button>
                                                                <button type="submit"
                                                                    class="btn btn-dark">Upload</button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <%movieList.forEach(movie=> {%>
                                        <tr>

                                            <th scope="row"><%= movie.lecno %></th>
                                            <td>
                                                <%= movie.Aname %>
                                            </td>
                                            <td><%= movie.img %></td>
                                            <td>
                                    
                                                <a href="/deletel/<%=movie._id %>" onclick="return confirm('Are you sure to delete this record ?');"><i  class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
                                            </td>
                                            <!-- <td>
                                                <div class="input-group">
