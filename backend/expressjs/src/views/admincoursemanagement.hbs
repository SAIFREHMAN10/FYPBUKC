                                    <label for="instructor" class="form-label">Instructor</label>
                                    <input type="text" class="form-control" id="instructor" name="instructor" value="{{admincoursemanagement.instructor}}">
                                </div>
                                <div class="col-md-6">
                                    <label for="inputState" class="form-label">Credit Hours</label>
                                    <select id="inputState" class="form-select" name="credithours" value="{{admincoursemanagement.credithours}}">
                                    <option selected>1</option>
                                    <option>2</option>
                                    <option>2+1</option>
                                    <option>3</option>
                                  </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="inputState" class="form-label">Program</label>
                                    <select id="inputState" class="form-select" name="program" value="{{admincoursemanagement.program}}">
                                    <option selected>CS</option>
                                    <option>BBA</option>
                                    <option>CE</option>
                                    <option>SE</option>
                                  </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="inputState" class="form-label">Semester</label>
                                    <select id="inputState" class="form-select" name="semester" value="{{admincoursemanagement.semester}}">
                                    <option selected>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                    <option>6</option>
                                    <option>7</option>
                                    <option>8</option>
                                  </select>
                                </div>
